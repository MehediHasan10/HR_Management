<%- include('../../template/header') -%>

<div class="wrapper">
    <%- include('../../template/sidebar') -%>
    <div class="main-panel">
        <%- include('../../template/navbar') -%>
        <div class="content">
            <div class="container-fluid">

              <!-- your content here -->
                <div class="container-fluid">
                    <h3 class="text-center" style='font-weight:bolder;'><span class="underline--magical">Officials Information Table</span></h3>
                    <a href="/generatePdf/<%= divisionId %>" class="btn btn-primary">Download PDF</a>
                    <br>
                    
                    <% if(output.length > 0) { %>
                        
                        <table id="myTable" class="table table-striped table-bordered " >
                            <thead>
                                <tr class="text-center">
                                    <th>No.</th>
                                    <th>Employee Photo</th>
                                    <th>Employee Name</th>
                                    <th>Designation</th>
                                    <th>Department</th> 
                                    <th>Section</th>
                                    <th>Phone Number</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            
                            <tbody>
                                <% output.forEach((entry) => { %>
                                    <tr class="text-center">
                                        <td></td>
                                        <td><img class="img-fluid" style="height:50px; width:40px;" src="<%= entry.basicInfo.image %>"></td>
                                        <td><%= entry.basicInfo.employeeName %></td>
                                        <td><%= entry.basicInfo.designation %></td>
                                        <td><%= entry.basicInfo.department %></td> 
                                        <td><%= entry.basicInfo.section %></td>
                                        <td><%= entry.basicInfo.phone %></td>
                                        <td class="text-center">
                                            <a href="/employeeDetails/pdf/<%= entry.id %>" class="btn btn-success" style="text-decoration:none;"><i class="fa fa-download"></i> PDF </a>
                                            <a href="/showDetails/<%= entry.id %>" class="btn btn-success" style="text-decoration:none;"><i class="fa fa-search-plus"></i></a>
                                            <a href="/editDetails/<%= entry.id %>" class="btn btn-primary" style="text-decoration:none;"> <i class="fa fa-edit"></i></a>
                                            <a href="/deleteOfficials/<%= entry.id %>" class="btn btn-danger"  style="text-decoration:none;"> <i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                                
                        </table>
                       
                    <% } else { %>
                        <h5 class="text-center">No Record Found !</h5>
                    <% } %>
                </div>

            </div>
        </div>
        <%- include('../../template/footer') -%>
    </div>
</div>
<%- include('../../template/footerlink') -%>








