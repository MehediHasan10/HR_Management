<%- include('../../template/header') -%>

<div class="wrapper">
    <%- include('../../template/staffSidebar') -%>
    <div class="main-panel">
        <%- include('../../template/navbar') -%>
        <div class="content">
            <div class="container-fluid">
              <!-- your content here -->
                <div class="container">
                    <h3 class="text-center" style='margin-top:1em; font-weight:bolder;'><span class="underline--magical">Staffs Information</span></h3>
                    <br>
                    
                    <% if(output.length > 0) { %>
                        
                        <table id="myTable" class="table table-striped table-bordered" >
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Employee Name</th>
                                        <th>Designation</th>
                                        <th>National Id</th>
                                        <th>Phone Number</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                
                                    <tbody>
                                        <% output.forEach((entry) => { %>
                                            <tr>
                                                <td></td>
                                                <td><%= entry.basicInfo.employeeName %></td>
                                                <td><%= entry.basicInfo.designation %></td>
                                                <td><%= entry.basicInfo.nationalID %></td>
                                                <td><%= entry.basicInfo.phone %></td>
                                                <td class="text-center">
                                                    <a href="/showStaffDetails/<%= entry.id %>" class="btn btn-success" style="text-decoration:none;"><i class="fa fa-search-plus"></i> Open </a>
                                                    <a href="/editStaffDetails/<%= entry.id %>" class="btn btn-primary" style="text-decoration:none;"> <i class="fa fa-edit"></i> Edit </a>
                                                    <a href="/deleteStaffs/<%= entry.id %>" class="btn btn-danger"  style="text-decoration:none;"> <i class="fa fa-trash"></i> Delete </a>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                
                        </table>
                        
                    <% } else { %>
                        <h5 class="text-center">No Record Found !</h5>
                    <% } %>
                </div>
            </div>
        </div>
        <%- include('../../template/footer') -%>
    </div>
</div>
<%- include('../../template/footerlink') -%>








