<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Table PDF</title>

    <style>
        .flex-container {
            display: flex;            
        }
        .center {
            text-align: center;
        }
        .inline-block-child {
            display: inline-block;
        }
        table, td, th {
            border: 1px solid black;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }
    </style>
</head>
<body>

<div style="margin-top: 5px; padding-top: 5px; padding-bottom: 5px; background-color: #ffffffa6;" class="center">
    <h3 class="text-center" style='font-weight:bolder;'><span class="underline--magical">Officials Information Table</span></h3>
    <% if(output.length > 0) { %>

        <table id="myTable" class="table table-striped table-bordered" style="width: 100%" >
            <thead>
            <tr class="text-center">
                <th>No.</th>
                <th>Employee Name</th>
                <th>Designation</th>
                <th>Department</th>
                <th>Section</th>
                <th>Phone Number</th>
            </tr>
            </thead>

            <tbody>
            <% output.forEach((entry,index) => { %>
                <tr class="text-center">
                    <td><%= index+1 %></td>
                    <td><%= entry.basicInfo.employeeName %></td>
                    <td><%= entry.basicInfo.designation %></td>
                    <td><%= entry.basicInfo.department %></td>
                    <td><%= entry.basicInfo.section %></td>
                    <td><%= entry.basicInfo.phone %></td>
                </tr>
            <% }); %>
            </tbody>

        </table>

    <% } else { %>
        <h5 class="text-center">No Record Found !</h5>
    <% } %>
</div>

</body>
</html>