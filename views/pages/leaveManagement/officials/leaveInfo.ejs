<%- include('../../../template/header') -%>

<div class="wrapper">
    <%- include('../../../template/sidebar') -%>
    <div class="main-panel">
        <%- include('../../../template/navbar') -%>
        <div class="content">
            <div class="container-fluid">

                <!-- your content here -->
                <div class="container-fluid">
                    <h3 class="text-center" style='margin-top:1em; font-weight:bolder;'><span class="underline--magical">Officials Leave Info</span></h3>
                    <br>
                    
                    <% if(officialsInfoOutput.length > 0) { %>
                        
                        <table id="myTable" class="table table-striped table-bordered " >
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Employee Name</th>
                                    <th>Designation</th>
                                    <th>Department</th> 
                                    <th>Section</th>
                                    
                                    <th>Phone Number</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            
                            <tbody>
                                <% officialsInfoOutput.forEach((entry) => { %>
                                    <tr>
                                        <td></td>
                                        <td><%= entry.basicInfo.employeeName %></td>
                                        <td><%= entry.basicInfo.designation %></td>
                                        <td><%= entry.basicInfo.department %></td> 
                                        <td><%= entry.basicInfo.section %></td>
                                        <td><%= entry.basicInfo.phone %></td>
                                        <td class="text-center">
                                            <a href="/leave/addLeaveInfo/<%= entry.id %>" class="btn btn-success" style="text-decoration:none;"><i class="fa fa-edit"></i> Add Leave Info </a>

                                            <!-- <a href="" class="btn btn-primary" style="text-decoration:none;"> <i class="fa fa-edit"></i> Edit </a> -->

                                            <a href="/leave/showLeaveInfo/<%= entry.id %>" class="btn btn-primary"  style="text-decoration:none;"> <i class="fa fa-search-plus"></i> Show Leave Info </a>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                                
                        </table>
                        
                    <% } else { %>
                        <h5 class="text-center">No Record Found !</h5>
                    <% } %>
                </div>

            </div>
        </div>
        <%- include('../../../template/footer') -%>
    </div>
</div>
<%- include('../../../template/footerlink') -%>

