<%- include('../../template/header') -%>

<div class="wrapper">
    <%- include('../../template/sidebar') -%>
    <div class="main-panel">
        <%- include('../../template/navbar') -%>
        <div class="content">
            <div class="container-fluid">

              <!-- your content here -->
                <div class="container-fluid">
                    <h3 class="text-center" style='margin-top:1em; font-weight:bolder;'><span class="underline--magical">Officials Retirement Information</span> </h3>
                    <br>
                    
                    <% if(output.length > 0) { %>
                        
                        <table id="myTable" class="table table-striped table-bordered " >
                            <thead>
                                <tr class="text-center">
                                    <th>No.</th>
                                    <th>Name</th>
                                    <th>Designation</th>
                                    <th>Department</th> 
                                    <th>Section</th>
                                    <th>Phone</th>
                                    <th>Retirement Date</th>
                                    <th>Remaining Days</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            
                            <tbody>
                                <% output.forEach((entry) => { %>
                                    <tr class="text-center">
                                        <td></td>
                                        <td><%= entry.basicInfo.employeeName %></td>
                                        <td><%= entry.basicInfo.designation %></td>
                                        <td><%= entry.basicInfo.department %></td> 
                                        <td><%= entry.basicInfo.section %></td>
                                        <td><%= entry.basicInfo.phone %></td>
                                        <td><%= moment(entry.basicInfo.dateOfRetirement).format('DD-MMM-YYYY') %></td>
                                        <td><%= entry.basicInfo.remainingRetiredTime %></td>
                                        
                                        <td class="text-center">
                                            <a href="/showDetails/<%= entry.id %>" class="btn btn-success" style="text-decoration:none;"><i class="fa fa-search-plus"></i> Open </a>
                                            <!-- <a href="/editDetails/<%= entry.id %>" class="btn btn-primary" style="text-decoration:none;"> <i class="fa fa-edit"></i> Edit </a>
                                            <a href="/deleteOfficials/<%= entry.id %>" class="btn btn-danger"  style="text-decoration:none;"> <i class="fa fa-trash"></i> Delete </a> -->
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                                
                        </table>
                       
                    <% } else { %>
                        <h5 class="text-center"> No Record Found !</h5>
                    <% } %>
                </div>

            </div>
        </div>
        <%- include('../../template/footer') -%>
    </div>
</div>
<%- include('../../template/footerlink') -%>